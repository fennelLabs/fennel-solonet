extends: default

rules:
  # GitHub Actions workflows often have long lines due to complex expressions
  line-length:
    max: 120
    level: warning
  
  # Allow trailing spaces in some contexts
  trailing-spaces:
    level: warning
  
  # GitHub Actions workflows don't need document start markers
  document-start:
    level: warning
  
  # Allow truthy values (GitHub Actions uses 'yes'/'no' sometimes)
  truthy:
    level: warning 